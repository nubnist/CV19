<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CV19.Resources.Styles">

    <Style x:Key="BntBase" TargetType="Button">
        <Setter Property="Margin" Value="3, 0"></Setter>
        <Setter Property="Padding" Value="3, 5"></Setter>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource BntBase}">
        <Setter Property="FontWeight" Value="Bold"></Setter>
        <Setter Property="Background" Value="White"></Setter>
    </Style>

    <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BntBase}">
        <Setter Property="Background" Value="Red"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
    </Style>
</ResourceDictionary>